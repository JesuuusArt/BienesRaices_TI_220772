extends ../layout/index

block contenido
    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center.text-action Bienes 
            span.font-normal.text-secondaryText Raíces  
        h2.text-center.text-2xl.font-extrabold.text-secondaryText= pagina

    div(class="bg-formBackground shadow py-8 px-4 rounded-lg max-w-md mx-auto") 
        p(class= error ? 'bg-error' : 'bg-success').py-2.px-5.rounded-lg.w-full.font-bold.text-center.text-white.uppercase= mensaje

        if !error
            a(href="/auth/login" class="text-center font-bold text-sm inline-block bg-action text-white hover:bg-hoverAction uppercase py-3 rounded-lg mt-4 items-center justify-center") Ya puedes Iniciar Sesión
